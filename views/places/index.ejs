<% layout('layouts/app') %>
    <h1>Semua Tempat Hiburan Terbaik Hanya Di BestPoint</h1>
    <% for( const place of places) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img src="<%= place.image %>" alt="<%= place.title %>" class="img-fluid">
                </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h4 class="card-title"><%= place.title %></h4>
                            <p class="card-text"><%= place.description %></p>
                            <p class="card-text">
                                <small class="text-secondary">
                                    <%= place.location %>
                                </small>
                            </p>
                            <a href="/places/<%= place._id %>" class="btn btn-dark">Lihat <%= place.title %></a>
                        </div>
                    </div>
            </div>
        </div>
    <% } %>